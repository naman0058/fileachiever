<style>
	/* ===== Premium Illustration (drop in with your other scoped styles) ===== */
.contact-hero__art{
  display:flex; justify-content:flex-end; align-items:center;
  overflow: hidden; /* prevents horizontal scroll */
}

.art-pro{
  position: relative;
  width: min(92vw, 540px);      /* fluid, capped */
  aspect-ratio: 5 / 4;          /* responsive height */
  border-radius: 20px;
  background:#fff;
  border:1px solid rgba(14,18,32,.08);
  box-shadow: 0 18px 50px rgba(14,18,32,.10);
  overflow: hidden;
  isolation: isolate;
  will-change: transform;
}

/* Gradient plate (soft background) */
.art-pro__plate{
  position:absolute; inset:0;
  background:
    radial-gradient(140% 80% at 10% 15%, rgba(42,71,255,.14) 0%, transparent 60%),
    radial-gradient(120% 70% at 90% 85%, rgba(241,127,35,.14) 0%, transparent 60%),
    linear-gradient(#fff, #fff);
  z-index: 1;
}

/* Rings */
.art-pro__ring{
  position:absolute;
  border-radius: 50%;
  filter: blur(.2px);
  opacity: .8;
  will-change: transform;
  z-index: 2;
}
.art-pro__ring--a{
  width: 75%; height: 75%;
  top: -18%; left: -10%;
  background: radial-gradient(circle at 50% 50%, rgba(42,71,255,.18), transparent 60%);
  animation: floatA 10s ease-in-out infinite;
}
.art-pro__ring--b{
  width: 60%; height: 60%;
  bottom: -20%; right: -8%;
  background: radial-gradient(circle at 50% 50%, rgba(241,127,35,.18), transparent 60%);
  animation: floatB 12s ease-in-out infinite;
}

/* Dotted grid overlay */
.art-pro__grid{
  position:absolute; inset: 8% 8% auto 8%;
  height: 52%;
  background-image: radial-gradient(circle at center, rgba(14,18,32,.08) 1px, transparent 1px);
  background-size: 14px 14px;
  border-radius: 14px;
  opacity: .55;
  z-index: 3;
}

/* Floating badges */
.art-pro__badge{
  position:absolute; display:inline-flex; align-items:center; gap:8px;
  padding: 8px 11px;
  border-radius: 12px;
  background: #fff;
  border: 1px solid rgba(14,18,32,.10);
  box-shadow: 0 10px 26px rgba(14,18,32,.10);
  font-weight: 800;
  z-index: 4;
  will-change: transform, box-shadow;
}
.art-pro__badge i{ width:16px; height:16px; color:#2A47FF; }
.art-pro__badge span{ white-space:nowrap; color:#0e1220; }

.art-pro__badge--primary{ top: 14px; left: 14px; }
.art-pro__badge--accent{ bottom: 16px; right: 16px; }
.art-pro__badge--accent i{ color:#F17F23; }
.art-pro__badge--neutral{
  top: 50%; right: 12px; transform: translateY(-50%);
  opacity:.95;
}

/* Hover polish (desktop) */
@media (hover:hover){
  .art-pro:hover .art-pro__badge{
    box-shadow: 0 14px 34px rgba(14,18,32,.14);
    transform: translateZ(0) scale(1.02);
  }
}

/* Motion (respect reduced motion) */
@keyframes floatA{
  0%,100%{ transform: translate(0,0) }
  50%    { transform: translate(6px, -8px) }
}
@keyframes floatB{
  0%,100%{ transform: translate(0,0) }
  50%    { transform: translate(-8px, 6px) }
}
@media (prefers-reduced-motion: reduce){
  .art-pro__ring{ animation: none !important; }
}

/* Small screens */
@media (max-width: 520px){
  .art-pro{ width: 100%; border-radius: 16px; }
  .art-pro__badge{ padding: 7px 10px; border-radius: 10px; }
}

</style>

