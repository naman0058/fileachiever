<!-- ===== Scoped Styles ===== -->
<style>
:root{
  --ink:#0e1220; --muted:#6b7280; --bg:#f7f8fc; --card:#fff;
  --brand:#2A47FF; --accent:#F17F23; --ring:rgba(42,71,255,.18);
  --brd:rgba(14,18,32,.10); --radius:16px;
}
html,body{background:var(--bg);color:var(--ink);}
.container{max-width:1100px;margin:0 auto;padding:0 16px;}

/* Hero */
.contact-hero{
  background:linear-gradient(135deg,rgba(42,71,255,.06),rgba(241,127,35,.06));
  border-bottom:1px solid var(--brd);
  padding:28px 0 20px;
}
.contact-hero__grid{display:grid;grid-template-columns:1.15fr .85fr;gap:18px;align-items:center;}
@media (max-width:992px){.contact-hero__grid{grid-template-columns:1fr;}}
.chip{display:inline-block;background:rgba(42,71,255,.08);color:var(--brand);border:1px solid rgba(42,71,255,.2);border-radius:999px;padding:6px 10px;font-weight:800;font-size:12px;}
.contact-hero h1{margin:.4rem 0 .6rem;font-weight:900;}
.lead{color:#111;}
.contact-hero__pills{display:flex;gap:10px;flex-wrap:wrap;margin-top:10px;padding:0;list-style:none;}
.contact-hero__pills li{display:inline-flex;align-items:center;gap:8px;padding:8px 12px;border:1px solid var(--brd);border-radius:999px;background:#fff;font-weight:700;}
.contact-hero__pills svg{width:16px;height:16px;color:var(--brand);}

/* Art */
.contact-hero__art{display:flex;justify-content:flex-end;overflow:hidden;}
.art{position:relative;width:clamp(280px, 92vw, 520px);aspect-ratio:5/4;border:1px solid var(--brd);border-radius:18px;background:#fff;box-shadow:0 12px 32px rgba(14,18,32,.08);overflow:hidden;}
.art-ring{position:absolute;inset:auto;border-radius:50%;filter:blur(0.2px);opacity:.6;}
.ring-1{width:140%;height:140%;top:-28%;left:-20%;background:radial-gradient(circle at center, rgba(42,71,255,.15), transparent 60%);}
.ring-2{width:90%;height:90%;bottom:-25%;right:-10%;background:radial-gradient(circle at center, rgba(241,127,35,.16), transparent 60%);}
.art-badge{position:absolute;top:12px;left:12px;display:inline-flex;align-items:center;gap:8px;background:#fff;border:1px solid var(--brd);border-radius:12px;padding:8px 10px;font-weight:800;box-shadow:0 8px 20px rgba(14,18,32,.06);}
.art-badge svg{width:16px;height:16px;color:var(--brand);}

/* Main grid */
.contact-main{padding:22px 0 32px;}
.contact-grid{display:grid;grid-template-columns:1.2fr .8fr;gap:16px;align-items:start;}
@media (max-width:992px){.contact-grid{grid-template-columns:1fr;}}

/* Cards */
.card-surface{background:var(--card);border:1px solid var(--brd);border-radius:var(--radius);box-shadow:0 10px 30px rgba(14,18,32,.06);}
.contact-card{padding:16px;}
.card-head{display:flex;align-items:center;justify-content:space-between;margin-bottom:8px;}
.card-head h2{margin:0;font-weight:900;}
.alert-soft{display:flex;align-items:center;gap:8px;background:#fff;border:1px solid rgba(241,127,35,.25);color:#8a4b00;border-radius:12px;padding:8px 10px;}
.alert-soft svg{width:16px;height:16px;color:#d97706;}

/* Form */
.form-row{display:grid;grid-template-columns:1fr 1fr;gap:12px;}
@media (max-width:640px){.form-row{grid-template-columns:1fr;}}
.field{display:flex;flex-direction:column;gap:6px;}
.field label{font-weight:800;}
.input,.textarea{display:flex;align-items:center;gap:8px;border:1px solid var(--brd);border-radius:12px;background:#fff;padding:0 10px;}
.input:focus-within,.textarea:focus-within{box-shadow:0 0 0 4px var(--ring);border-color:var(--brand);}
.input input{height:44px;border:none;outline:none;flex:1;font-weight:600;background:transparent;}
.textarea textarea{border:none;outline:none;flex:1;resize:vertical;min-height:120px;padding:10px 0;font-weight:600;background:transparent;}
.input svg,.textarea svg{width:18px;height:18px;color:var(--brand);}
.hint{color:var(--muted);font-size:.85rem;}
.hp{position:absolute !important;left:-9999px !important;opacity:0 !important;}

.actions{display:flex;gap:10px;flex-wrap:wrap;margin-top:8px;}
.btn{display:inline-flex;align-items:center;gap:8px;height:44px;padding:0 16px;border-radius:12px;border:1px solid transparent;font-weight:900;text-decoration:none;cursor:pointer;}
.btn svg{width:18px;height:18px;}
.btn-brand{background:var(--brand);color:#fff;border-color:var(--brand);box-shadow:0 10px 26px rgba(42,71,255,.15);}
.btn-brand:hover{filter:brightness(.98);}
.btn-light{background:#fff;color:#111;border:1px solid var(--brd);}
.btn-light:hover{box-shadow:0 0 0 4px var(--ring);}

/* Info card */
.info-card{padding:16px;}
.info-card h3{margin:0 0 8px;font-weight:900;}
.info-list{list-style:none;padding:0;margin:10px 0;display:grid;gap:10px;}
.info-list li{display:flex;gap:10px;align-items:flex-start;border:1px solid var(--brd);border-radius:12px;padding:10px;background:#fff;}
.info-list svg{width:18px;height:18px;color:var(--brand);margin-top:2px;}
.info-list strong{display:block;}
.links{list-style:none;padding:0;margin:10px 0 0;display:grid;gap:8px;}
.links a{display:flex;align-items:center;gap:8px;font-weight:700;text-decoration:none;color:#111;border:1px solid var(--brd);border-radius:10px;padding:8px;background:#fff;}
.links a:hover{box-shadow:0 0 0 4px var(--ring);}
.links svg{width:16px;height:16px;color:var(--brand);}
.divider{border:none;border-top:1px solid var(--brd);margin:12px 0;}
</style>

<!-- Feather icons (safe load) + tiny UX script -->
<script>
(function(){
  // Feather icons
  function initFeather(){ window.feather && window.feather.replace(); }
  if (!window.feather) {
    const s = document.createElement('script');
    s.src = 'https://unpkg.com/feather-icons';
    s.onload = initFeather; document.head.appendChild(s);
  } else { initFeather(); }

  // Submit button lock
  const form = document.getElementById('contact');
  const btn  = document.getElementById('SendBtn');
  form && form.addEventListener('submit', function(e){
    if(!form.checkValidity()){
      e.preventDefault(); e.stopPropagation(); form.reportValidity(); return;
    }
    if(btn){ btn.disabled = true; btn.innerHTML = '<i data-feather="loader"></i> Sending…'; initFeather(); }
  });
})();
</script>


