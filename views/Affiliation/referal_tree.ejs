<% include ./header.ejs %>
<script src="https://cdn.tailwindcss.com"></script>
<script>
  tailwind.config = {
    theme: {
      extend: {
        colors: {
          brandOrange: '#F17F23',
          brandBlue: '#2A47FF'
        },
        fontFamily: {
          sans: ['Inter', 'system-ui', 'Arial', 'sans-serif']
        }
      }
    }
  }
</script>

<style>
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
</style>

<div class="content-body p-6 mt-5 bg-gray-50 min-h-screen font-sans">

  <!-- Header -->
  <div class="bg-brandOrange text-white py-6 px-6 shadow-md">
    <h1 class="text-3xl font-bold">📊 Referral Tree Dashboard</h1>
    <p class="text-sm mt-1 opacity-90">Track how your brand ambassadors are growing the network</p>
  </div>

  <!-- Search Bar -->
  <div class="px-6 mt-6">
    <input type="text" id="searchInput" placeholder="🔍 Search ambassador name..." class="w-full md:w-1/3 px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-brandOrange focus:outline-none shadow-sm" />
  </div>

  <!-- Table Section -->
  <div class="p-6">
    <div class="bg-white rounded-xl shadow-lg overflow-auto max-h-[75vh] scrollbar-hide">
      <table class="min-w-full text-sm text-left" id="ambassadorTable">
        <thead class="bg-brandBlue text-white sticky top-0 z-10 shadow-sm">
          <tr>
            <th class="px-6 py-3 text-sm font-semibold whitespace-nowrap">Ambassador Name</th>
            <th class="px-6 py-3 text-sm font-semibold text-center">Referred Count</th>
            <th class="px-6 py-3 text-sm font-semibold">Referred Ambassadors</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% result.forEach(row => { %>
            <tr class="hover:bg-gray-50 transition ambassador-row">
              <td class="px-6 py-4 font-medium text-gray-800 whitespace-nowrap">
                <span class="inline-block bg-brandOrange/10 text-brandOrange px-3 py-1 rounded-full text-xs font-semibold ambassador-name">
                  <%= row.referrer_name %>
                </span>
              </td>
              <td class="px-6 py-4 text-center text-gray-900 font-semibold">
                <span class="inline-block bg-brandBlue/10 text-brandBlue px-2.5 py-0.5 rounded text-xs">
                  <%= row.total_referred %>
                </span>
              </td>
              <td class="px-6 py-4 text-gray-700">
                <% if (row.referred_names) { %>
                  <div class="flex flex-wrap gap-2">
                    <% row.referred_names.split(',').forEach(name => { %>
                      <span class="bg-gray-200 text-gray-800 text-xs px-2 py-1 rounded-full">
                        <%= name.trim() %>
                      </span>
                    <% }) %>
                  </div>
                <% } else { %>
                  <span class="text-gray-400 italic">No referrals</span>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- Search Filter Script -->
<script>
  document.getElementById("searchInput").addEventListener("keyup", function () {
    const query = this.value.toLowerCase();
    const rows = document.querySelectorAll("#ambassadorTable .ambassador-row");

    rows.forEach(row => {
      const name = row.querySelector(".ambassador-name").textContent.toLowerCase();
      if (name.includes(query)) {
        row.style.display = "";
      } else {
        row.style.display = "none";
      }
    });
  });
</script>


