  <% for (let key in result) { %>
    <div class="bg-white border border-gray-200 min-h-[120px] rounded-lg shadow-sm hover:shadow-md hover:border-brandBlue transition p-4 flex flex-col justify-between">
      <div class="flex justify-between items-start">
        <div>
          <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-1">
            <%= key.replace(/_/g, ' ') %>
          </p>
          <p class="text-3xl font-bold text-brandBlue leading-tight">
