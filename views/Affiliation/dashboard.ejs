 <div class="bg-white rounded-xl shadow-xl border border-gray-100 p-6 overflow-x-auto">
  <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-3">
    <svg class="w-6 h-6 text-brandBlue" fill="currentColor" viewBox="0 0 24 24">
      <path d="M9 19V6h13v13H9zm11-2V8H11v9h9zM4 13H2v6a1 1 0 001 1h6v-2H4v-5zm0-4h2V5h5V3H3a1 1 0 00-1 1v6h2V9z" />
    </svg>
    Promoter Watch Logs
  </h2>

<div class="w-full overflow-auto rounded-lg border border-gray-200">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-brandBlue text-white text-xs uppercase tracking-wider">
      <tr>
        <th class="px-5 py-3 text-left font-semibold">S.No.</th>
        <th class="px-5 py-3 text-left font-semibold">Original URL</th>
        <th class="px-5 py-3 text-left font-semibold">Promoter Clicks</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-100 text-sm text-gray-800">
      <% if (promoterData.length > 0) { %>
        <% promoterData.forEach((row, index) => { %>
          <tr class="hover:bg-gray-50 transition-all duration-200">
            <td class="px-5 py-4 whitespace-nowrap"><%= index + 1 %></td>
            <td class="px-5 py-4 whitespace-nowrap text-brandBlue underline break-all">
              <a href="<%= row.original_url %>" target="_blank"><%= row.original_url %></a>
            </td>
            <td class="px-5 py-4 whitespace-nowrap font-medium"><%= row.promoter_clicks %></td>
           
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="4" class="text-center py-6 text-gray-500">No promoter data available</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

</div>

