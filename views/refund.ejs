<!-- ===== Scoped Styles ===== -->
<style>
:root{
  --ink:#0e1220; --muted:#6b7280; --bg:#f7f8fc; --card:#fff;
  --brand:#2A47FF; --accent:#F17F23; --brd:rgba(14,18,32,.10); --ring:rgba(42,71,255,.18);
  --radius:16px;
}
.breadcrumb-bar{ background:#fff; border-bottom:1px solid var(--brd); }
.page-breadcrumb .breadcrumb{ margin:0; padding:.75rem 0; }

.rp-hero{
  background:linear-gradient(135deg,rgba(42,71,255,.06),rgba(241,127,35,.06));
  border-bottom:1px solid var(--brd);
}
.rp-hero__wrap{
  display:grid; gap:20px; grid-template-columns:1.2fr .8fr; align-items:center;
  padding:28px 0;
}
@media(max-width:991.98px){ .rp-hero__wrap{ grid-template-columns:1fr; } }

.rp-badge{
  display:inline-block; font-weight:800; font-size:12px;
  padding:6px 10px; border-radius:999px; color:var(--brand);
  background:rgba(42,71,255,.08); border:1px solid rgba(42,71,255,.2);
}
.rp-hero h1{ margin:.4rem 0 .6rem; font-weight:900; color:var(--ink); }
.rp-hero .lead{ color:#111; font-size:1.05rem; }
.rp-hero__pills{ list-style:none; padding:0; margin:12px 0 0; display:flex; gap:10px; flex-wrap:wrap; }
.rp-hero__pills li{ display:inline-flex; align-items:center; gap:8px; padding:8px 12px; background:#fff; border:1px solid var(--brd); border-radius:999px; font-weight:700; }
.rp-hero__pills svg{ width:16px; height:16px; color:var(--brand); }

.rp-hero__art{ display:flex; justify-content:center; }
.rp-art{
  position:relative; width:100%; max-width:520px; aspect-ratio:1/1; overflow:hidden;
  background:#fff; border:1px solid var(--brd); border-radius:20px;
  box-shadow:0 12px 30px rgba(14,18,32,.06);
}
.ring{ position:absolute; border:2px solid rgba(42,71,255,.15); border-radius:50%; animation:pulse 7s linear infinite; }
.ring-1{ inset:6%; }
.ring-2{ inset:16%; animation-delay:.6s; }
.ring-3{ inset:26%; animation-delay:1.2s; }

.chip{
  position:absolute; display:inline-flex; align-items:center; gap:8px;
  background:#fff; border:1px solid var(--brd); border-radius:999px; padding:8px 12px; font-weight:700; color:#111;
  box-shadow:0 8px 20px rgba(14,18,32,.08);
}
.chip svg{ width:16px; height:16px; color:var(--brand); }
.chip-main{ top:50%; left:50%; transform:translate(-50%,-50%); }
.chip-2{ top:14%; left:12%; }
.chip-3{ bottom:14%; right:12%; }

@keyframes pulse{
  0%{ transform:scale(1); opacity:.8; }
  50%{ transform:scale(1.04); opacity:.45; }
  100%{ transform:scale(1); opacity:.8; }
}

.rp-main{ background:var(--bg); padding:24px 0 32px; }
.rp-toc{ display:flex; flex-wrap:wrap; gap:8px; margin-bottom:16px; }
.rp-toc a{
  display:inline-flex; align-items:center; gap:8px; padding:8px 12px; border:1px solid var(--brd);
  background:#fff; border-radius:10px; font-weight:700; color:#111; text-decoration:none;
}
.rp-toc a:hover{ box-shadow:0 0 0 4px var(--ring); }

.rp-card{
  background:#fff; border:1px solid var(--brd); border-radius:16px; padding:16px;
  box-shadow:0 10px 24px rgba(14,18,32,.06); margin-bottom:12px;
}
.rp-card h2{ display:flex; align-items:center; gap:10px; margin:0 0 8px; font-weight:900; color:var(--ink); }
.rp-card h2 svg{ width:20px; height:20px; color:var(--brand); }
.rp-card p{ color:#111; margin:0; }
.rp-bullets{ margin:8px 0 0; padding-left:18px; color:#111; }
.rp-bullets li{ margin:6px 0; }
.mini{ color:var(--muted); font-weight:700; font-size:.9rem; }

.rp-cta{
  margin-top:18px; background:#fff; border:1px solid var(--brd); border-radius:18px; padding:18px;
  display:flex; align-items:center; justify-content:space-between; gap:12px;
  box-shadow:0 12px 30px rgba(14,18,32,.06);
  flex-wrap:wrap;
}
.rp-cta__actions{ display:flex; gap:10px; flex-wrap:wrap; }
.rp-meta{ display:flex; align-items:center; gap:10px; color:var(--muted); font-weight:700; margin-top:4px; }
.rp-meta .sep{ opacity:.5; }

.btn{
  display:inline-flex; align-items:center; gap:8px; height:44px; padding:0 16px; border-radius:12px; font-weight:900; text-decoration:none; border:1px solid transparent;
}
.btn-brand{ background:var(--brand); color:#fff; border-color:var(--brand); box-shadow:0 10px 26px rgba(42,71,255,.15); }
.btn-brand:hover{ filter:brightness(.98); }
.btn-light{ background:#fff; color:#111; border:1px solid var(--brd); }
.btn-light:hover{ box-shadow:0 0 0 4px var(--ring); }
</style>

