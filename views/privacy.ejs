<!-- ===== Scoped Styles ===== -->
<style>
:root{
  --ink:#0e1220; --muted:#6b7280; --bg:#f7f8fc; --card:#fff;
  --brand:#2A47FF; --accent:#F17F23; --ring:rgba(42,71,255,.16);
  --brd:rgba(14,18,32,.10); --radius:16px;
}

/* Breadcrumb aligns with your existing theme */
.breadcrumb-bar{ background:#fff; border-bottom:1px solid var(--brd); }

.pp-hero{
  background: linear-gradient(135deg, rgba(42,71,255,.06), rgba(241,127,35,.06));
  border-bottom:1px solid var(--brd);
  padding:32px 0 24px;
}
.pp-hero__grid{ display:grid; gap:18px; grid-template-columns:1.15fr .85fr; align-items:center; }
@media(max-width:991.98px){ .pp-hero__grid{ grid-template-columns:1fr; } }

.pp-badge{
  display:inline-flex; gap:8px; align-items:center;
  font-weight:800; font-size:12px; color:var(--brand);
  background:rgba(42,71,255,.08); border:1px solid rgba(42,71,255,.20);
  padding:6px 10px; border-radius:999px;
}
.pp-hero h1{ font-weight:900; margin:.5rem 0 .6rem; color:var(--ink); }
.pp-hero .lead{ color:#111; font-size:1.05rem; }
.pp-hero__pills{ display:flex; flex-wrap:wrap; gap:10px; margin:12px 0 0; padding:0; list-style:none; }
.pp-hero__pills li{
  display:inline-flex; gap:8px; align-items:center; font-weight:700;
  padding:8px 12px; background:#fff; border:1px solid var(--brd); border-radius:999px;
}
.pp-hero__pills svg{ width:16px; height:16px; color:var(--brand); }

/* Premium illustration (same system you liked) */
.pp-hero__art{ display:flex; justify-content:flex-end; }
.art-pro{
  position: relative; width:min(92vw, 540px); aspect-ratio:5/4;
  border-radius:20px; background:#fff; border:1px solid var(--brd);
  box-shadow:0 18px 50px rgba(14,18,32,.10); overflow:hidden; isolation:isolate;
}
.art-pro__plate{
  position:absolute; inset:0;
  background:
    radial-gradient(140% 80% at 10% 15%, rgba(42,71,255,.14) 0%, transparent 60%),
    radial-gradient(120% 70% at 90% 85%, rgba(241,127,35,.14) 0%, transparent 60%),
    linear-gradient(#fff,#fff);
  z-index:1;
}
.art-pro__ring{ position:absolute; border-radius:50%; opacity:.8; filter:blur(.2px); z-index:2; }
.art-pro__ring--a{ width:75%; height:75%; top:-18%; left:-10%;
  background: radial-gradient(circle, rgba(42,71,255,.18), transparent 60%);
  animation: floatA 10s ease-in-out infinite; }
.art-pro__ring--b{ width:60%; height:60%; bottom:-20%; right:-8%;
  background: radial-gradient(circle, rgba(241,127,35,.18), transparent 60%);
  animation: floatB 12s ease-in-out infinite; }
.art-pro__grid{ position:absolute; inset:8% 8% auto 8%; height:52%;
  background-image: radial-gradient(circle, rgba(14,18,32,.08) 1px, transparent 1px);
  background-size:14px 14px; border-radius:14px; opacity:.55; z-index:3; }
.art-pro__badge{
  position:absolute; display:inline-flex; gap:8px; align-items:center;
  background:#fff; border:1px solid var(--brd); box-shadow:0 10px 26px rgba(14,18,32,.10);
  padding:8px 11px; border-radius:12px; font-weight:800; z-index:4;
}
.art-pro__badge i{ width:16px; height:16px; color:#2A47FF; }
.art-pro__badge--primary{ top:14px; left:14px; }
.art-pro__badge--accent{ bottom:16px; right:16px; }
.art-pro__badge--accent i{ color:#F17F23; }
.art-pro__badge--neutral{ top:50%; right:12px; transform:translateY(-50%); opacity:.95; }
@keyframes floatA{ 0%,100%{transform:translate(0,0)} 50%{transform:translate(6px,-8px)} }
@keyframes floatB{ 0%,100%{transform:translate(0,0)} 50%{transform:translate(-8px,6px)} }
@media (prefers-reduced-motion: reduce){ .art-pro__ring{ animation:none!important; } }

.pp-main{ background:var(--bg); }

/* Cards (summary) */
.pp-section{ padding:26px 0; }
.pp-section.alt{ background:#fff; border-top:1px solid var(--brd); border-bottom:1px solid var(--brd); }
.pp-cards{ display:grid; gap:14px; grid-template-columns:repeat(3,1fr); }
@media(max-width:991.98px){ .pp-cards{ grid-template-columns:1fr; } }
.pp-card{
  background:#fff; border:1px solid var(--brd); border-radius:var(--radius);
  padding:16px; box-shadow:0 10px 24px rgba(14,18,32,.06);
}
.pp-ico{ width:22px; height:22px; color:var(--brand); }
.pp-card h3{ margin:8px 0 6px; font-weight:900; color:var(--ink); }
.pp-card p{ margin:0; color:var(--muted); }

/* Policy body */
.pp-body{
  background:#fff; border:1px solid var(--brd); border-radius:18px;
  padding:18px; box-shadow:0 12px 32px rgba(14,18,32,.06);
}
.pp-body h2{ font-weight:900; margin:0 0 8px; color:var(--ink); }
.pp-body h3{
  display:flex; align-items:center; gap:8px; font-weight:900; margin:16px 0 6px; color:#111;
}
.pp-body p{ color:#111; }
.pp-list{ padding-left:18px; color:#111; }
.pp-list li{ margin:6px 0; }

.pp-meta{
  display:flex; gap:10px; flex-wrap:wrap; margin-top:12px;
  font-weight:700; color:var(--muted);
}
.pp-meta svg{ width:16px; height:16px; color:var(--brand); }

/* CTA */
.pp-cta{ padding:28px 0; }
.pp-cta__box{
  border:1px solid var(--brd); border-radius:18px; background:#fff; padding:18px;
  display:flex; align-items:center; justify-content:space-between; gap:12px;
  box-shadow:0 12px 30px rgba(14,18,32,.06);
}
@media(max-width:991.98px){ .pp-cta__box{ flex-direction:column; align-items:flex-start; } }
.pp-cta__actions{ display:flex; gap:10px; flex-wrap:wrap; }
.btn{
  display:inline-flex; align-items:center; justify-content:center; gap:8px;
  height:44px; padding:0 16px; font-weight:900; border-radius:12px; border:1px solid transparent; text-decoration:none;
}
.btn-brand{ background:var(--brand); color:#fff; border-color:var(--brand); box-shadow:0 10px 26px rgba(42,71,255,.15); }
.btn-brand:hover{ filter:brightness(.98); }
.btn-light{ background:#fff; color:#111; border:1px solid var(--brd); }
.btn-light:hover{ box-shadow:0 0 0 4px var(--ring); }
</style>

