    .prize-pool-badge {
      background-color: rgba(39, 174, 96, 0.1);
      color: var(--success-color);
      font-weight: 500;
      padding: 0.35rem 0.65rem;
      border-radius: 0.25rem;
    }

    /* Section Headings */
    .section-title {
      font-weight: 600;
      color: var(--primary-color);
      margin-bottom: 1.25rem;
      position: relative;
      display: inline-block;
